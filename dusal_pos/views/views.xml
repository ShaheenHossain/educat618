<?xml version="1.0"?>
<openerp>
  <data>
    <record model="ir.ui.view" id="pos_config_view_form">
      <field name="name">pos.config.form.view</field>
      <field name="model">pos.config</field>
      <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@id='iface_invoicing']" position="after">
          <div class="col-xs-12 col-md-6 o_setting_box">
            <div class="o_setting_left_pane" id="print_company_logo">
              <field name="print_company_logo"/>
            </div>
            <div class="o_setting_right_pane">
              <label for="print_company_logo"/>
              <div class="text-muted">
                Print company logo on receipt
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-md-6 o_setting_box">
            <div class="o_setting_left_pane" id="print_orderno_barcode">
              <field name="print_orderno_barcode"/>
            </div>
            <div class="o_setting_right_pane">
              <label for="print_orderno_barcode"/>
              <div class="text-muted">
                Print order number as barcode on receipt
              </div>
            </div>
          </div>

          <div class="col-xs-12 col-md-6 o_setting_box">
            <div class="o_setting_left_pane" id="categorize_receipt">
              <field name="categorize_receipt"/>
            </div>
            <div class="o_setting_right_pane">
              <label for="categorize_receipt"/>
              <div class="text-muted">
                Categorize products on receipt
              </div>
            </div>
          </div>

        </xpath>
        <xpath expr="//div[@id='inventory_location']" position="after">
          <h2>Other</h2>
          <div class="row mt16 o_settings_container" id="inventory_location">
            <div class="col-xs-12 col-md-6 o_setting_box">
              <div class="o_setting_left_pane" id="hide_price_button">
                <field name="hide_price_button"/>
              </div>
              <div class="o_setting_right_pane">
                <label for="hide_price_button"/>
                <div class="text-muted">
                  Hide "Price" button fron Numpad
                </div>
              </div>
            </div>
            <div class="col-xs-12 col-md-6 o_setting_box">
              <div class="o_setting_left_pane" id="hide_discount_button">
                <field name="hide_discount_button"/>
              </div>
              <div class="o_setting_right_pane">
                <label for="hide_discount_button"/>
                <div class="text-muted">
                  Hide "Discount" button fron Numpad
                </div>
              </div>
            </div>
            <div class="col-xs-12 col-md-6 o_setting_box">
              <div class="o_setting_right_pane">
                <label for="zero_product"/>
                <div class="text-muted">
                  <field name="zero_product"/><br/>
                  Out of Stock Products Handling
                </div>
              </div>
            </div>

            <div class="col-xs-12 col-md-6 o_setting_box">
              <div class="o_setting_right_pane">
                <label for="max_payment_limit"/>
                <div class="text-muted">
                  <field name="max_payment_limit"/><br/>
                  Max cash payment limit
                </div>
              </div>
            </div>

            <!-- <div class="col-xs-12 col-md-12 o_setting_box"> <div class="o_setting_right_pane"> <label for="one_click_pays"/> <div class="text-muted"> <field name="one_click_pays" /> </div> </div> </div> -->
          </div>
        </xpath>

      </field>
    </record>
  </data>
</openerp>
